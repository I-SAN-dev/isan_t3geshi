<T3DataStructure>
    <meta type="array">
        <langChildren>0</langChildren>
        <langDisable>1</langDisable>
    </meta>
    <ROOT>
        <type>array</type>
        <el>

            <settings.codelang>
                <TCEforms>
                    <label>Code Language</label>
                    <config>
                        <type>input</type>
                        <size>255</size>
                        <max>255</max>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.codelang>

            <settings.linenums>
                <TCEforms>
                    <label>Enable line numbers</label>
                    <config>
                        <type>radio</type>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">yes</numIndex>
                                <numIndex index="1">true</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">no</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                        </items>
                        <default>true</default>
                    </config>
                </TCEforms>
            </settings.linenums>

            <settings.startlinenum>
                <TCEforms>
                    <label>Start with line number</label>
                    <config>
                        <type>input</type>
                        <size>7</size>
                        <max>7</max>
                        <eval>trim, int</eval>
                    </config>
                </TCEforms>
            </settings.startlinenum>

        </el>
    </ROOT>
</T3DataStructure>