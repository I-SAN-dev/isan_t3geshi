            <settings.class>
                <TCEforms>
                    <label>Zusätzliche CSS-Klasse</label>
                    <config>
                        <type>input</type>
                        <size>255</size>
                        <max>255</max>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </settings.class>


        </el>
    </ROOT>
</T3DataStructure>