                    <config>
                        <type>select</type>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">Default</numIndex>
                                <numIndex index="1">btn-default</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">Primary</numIndex>
                                <numIndex index="1">btn-primary</numIndex>
