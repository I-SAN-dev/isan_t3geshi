                </TCEforms>
            </settings.align>

            <settings.block>
                <TCEforms>
                    <label>Breite</label>
                    <config>
                        <type>radio</type>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">wie Text</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">100% (btn-block)</numIndex>
                                <numIndex index="1">btn-block</numIndex>
