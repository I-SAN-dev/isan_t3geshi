            </settings.type>

            <settings.size>
                <TCEforms>
                    <label>Größe</label>
                    <config>
                        <type>select</type>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">Normal</numIndex>
                                <numIndex index="1"></numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">Large</numIndex>
                                <numIndex index="1">btn-lg</numIndex>
                            </numIndex>
                            <numIndex index="2" type="array">
                                <numIndex index="0">Small</numIndex>
                                <numIndex index="1">btn-sm</numIndex>
                            </numIndex>
                            <numIndex index="3" type="array">
                                <numIndex index="0">Xtra Small</numIndex>
                                <numIndex index="1">btn-xs</numIndex>
                            </numIndex>
                        </items>
                        <default></default>
                    </config>
                </TCEforms>
            </settings.size>

            <settings.align>
                <TCEforms>
                    <label>Ausrichtung</label>
                    <config>
                        <type>radio</type>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">Links</numIndex>
                                <numIndex index="1">text-left</numIndex>
